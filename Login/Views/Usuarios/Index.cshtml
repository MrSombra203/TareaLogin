@model IEnumerable<Login.Models.Usuario>

@{
    ViewData["Title"] = "Administración de Usuarios";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-people-fill text-primary"></i>
            Administración de Usuarios
        </h2>
        <div>
            <a asp-action="Create" class="btn btn-success btn-lg">
                <i class="bi bi-person-plus"></i> Nuevo Usuario
            </a>
        </div>
    </div>

    @if (TempData["Mensaje"] != null)
    {
        var tipoMensaje = TempData["TipoMensaje"]?.ToString() ?? "info";
        <div class="alert alert-@tipoMensaje alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-list-ul"></i> Lista de Usuarios
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th style="width: 5%;">ID</th>
                                <th style="width: 15%;">Usuario</th>
                                <th style="width: 20%;">Nombre Completo</th>
                                <th style="width: 20%;">Email</th>
                                <th style="width: 10%;">Rol</th>
                                <th style="width: 10%;">Estado</th>
                                <th style="width: 10%;">Fecha</th>
                                <th style="width: 15%;" class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="@(item.Activo ? "" : "table-secondary")">
                                    <td class="fw-bold">#@item.Id</td>
                                    <td>
                                        <i class="bi bi-person-circle"></i>
                                        @item.NombreUsuario
                                    </td>
                                    <td>@item.NombreCompleto</td>
                                    <td>
                                        <i class="bi bi-envelope"></i>
                                        @item.Email
                                    </td>
                                    <td>
                                        @if (item.Rol == "Administrador")
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-shield-fill"></i> @item.Rol
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">
                                                <i class="bi bi-person"></i> @item.Rol
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Activo)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Activo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-x-circle"></i> Inactivo
                                            </span>
                                        }
                                    </td>
                                    <td class="text-muted small">
                                        @item.FechaRegistro.ToString("dd/MM/yyyy")
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id"
                                               class="btn btn-info btn-sm" title="Ver detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="btn btn-warning btn-sm" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            @if (item.Id != 1)
                                            {
                                                <a asp-action="Delete" asp-route-id="@item.Id"
                                                   class="btn btn-danger btn-sm" title="Eliminar">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center p-5">
                    <i class="bi bi-people" style="font-size: 4rem; color: #ccc;"></i>
                    <p class="text-muted mt-3">No hay usuarios registrados</p>
                </div>
            }
        </div>
        @if (Model.Any())
        {
            <div class="card-footer text-muted">
                <i class="bi bi-info-circle"></i> Total de usuarios: <strong>@Model.Count()</strong>
                | Activos: <strong>@Model.Count(u => u.Activo)</strong>
                | Inactivos: <strong>@Model.Count(u => !u.Activo)</strong>
            </div>
        }
    </div>

    <div class="mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver al Inicio
        </a>
    </div>
</div>