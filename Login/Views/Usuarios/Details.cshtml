@@model Login.Models.Usuario

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person-badge-fill"></i> Detalles del Usuario
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-4 text-center mb-4">
                            <div class="p-4 bg-light rounded">
                                <i class="bi bi-person-circle" style="font-size: 6rem; color: #0dcaf0;"></i>
                                <h5 class="mt-3 text-muted">ID: #@Model.Id</h5>
                                @if (Model.Activo)
                                {
                                    <span class="badge bg-success">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactivo</span>
                                }
                            </div>
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-5 mb-3">
                                    <i class="bi bi-person"></i> Usuario:
                                </dt>
                                <dd class="col-sm-7 mb-3">
                                    <strong>@Model.NombreUsuario</strong>
                                </dd>

                                <dt class="col-sm-5 mb-3">
                                    <i class="bi bi-person-badge"></i> Nombre Completo:
                                </dt>
                                <dd class="col-sm-7 mb-3">
                                    @Model.NombreCompleto
                                </dd>

                                <dt class="col-sm-5 mb-3">
                                    <i class="bi bi-envelope"></i> Email:
                                </dt>
                                <dd class="col-sm-7 mb-3">
                                    <a href="mailto:@Model.Email">@Model.Email</a>
                                </dd>

                                <dt class="col-sm-5 mb-3">
                                    <i class="bi bi-shield"></i> Rol:
                                </dt>
                                <dd class="col-sm-7 mb-3">
                                    @if (Model.Rol == "Administrador")
                                    {
                                        <span class="badge bg-danger fs-6">
                                            <i class="bi bi-shield-fill"></i> @Model.Rol
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info fs-6">
                                            <i class="bi bi-person"></i> @Model.Rol
                                        </span>
                                    }
                                </dd>

                                <dt class="col-sm-5 mb-3">
                                    <i class="bi bi-lock"></i> Contraseña:
                                </dt>
                                <dd class="col-sm-7 mb-3">
                                    <code>********</code>
                                </dd>

                                <dt class="col-sm-5 mb-3">
                                    <i class="bi bi-calendar3"></i> Fecha de Registro:
                                </dt>
                                <dd class="col-sm-7 mb-3">
                                    @Model.FechaRegistro.ToString("dddd, dd MMMM yyyy")
                                    <br>
                                    <small class="text-muted">@Model.FechaRegistro.ToString("HH:mm:ss")</small>
                                </dd>

                                <dt class="col-sm-5 mb-3">
                                    <i class="bi bi-toggle-on"></i> Estado:
                                </dt>
                                <dd class="col-sm-7 mb-3">
                                    @if (Model.Activo)
                                    {
                                        <span class="badge bg-success fs-6">
                                            <i class="bi bi-check-circle"></i> Usuario Activo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary fs-6">
                                            <i class="bi bi-x-circle"></i> Usuario Inactivo
                                        </span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="bi bi-arrow-left"></i> Volver al Listado
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg me-2">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            @if (Model.Id != 1)
                            {
                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-lg">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>