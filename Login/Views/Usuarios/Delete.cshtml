@model Login.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill"></i> Confirmar Eliminación
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-circle-fill"></i>
                        <strong>¿Está seguro de que desea eliminar este usuario?</strong>
                        <p class="mb-0 mt-2">Esta acción no se puede deshacer.</p>
                    </div>

                    <dl class="row mt-4">
                        <dt class="col-sm-5">ID:</dt>
                        <dd class="col-sm-7"><strong>#@Model.Id</strong></dd>

                        <dt class="col-sm-5">Usuario:</dt>
                        <dd class="col-sm-7">@Model.NombreUsuario</dd>

                        <dt class="col-sm-5">Nombre Completo:</dt>
                        <dd class="col-sm-7">@Model.NombreCompleto</dd>

                        <dt class="col-sm-5">Email:</dt>
                        <dd class="col-sm-7">@Model.Email</dd>

                        <dt class="col-sm-5">Rol:</dt>
                        <dd class="col-sm-7">
                            @if (Model.Rol == "Administrador")
                            {
                                <span class="badge bg-danger">@Model.Rol</span>
                            }
                            else
                            {
                                <span class="badge bg-info">@Model.Rol</span>
                            }
                        </dd>

                        <dt class="col-sm-5">Estado:</dt>
                        <dd class="col-sm-7">
                            @if (Model.Activo)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactivo</span>
                            }
                        </dd>

                        <dt class="col-sm-5">Registrado:</dt>
                        <dd class="col-sm-7">@Model.FechaRegistro.ToString("dd/MM/yyyy")</dd>
                    </dl>

                    <hr>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary btn-lg me-md-2">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash"></i> Sí, Eliminar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
