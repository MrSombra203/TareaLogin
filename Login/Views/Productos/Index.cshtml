@model IEnumerable<Login.Models.Producto>

@{
    ViewData["Title"] = "Gestión de Productos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-box-seam-fill text-primary"></i>
            Gestión de Productos
        </h2>
        <div>
            <a asp-action="Create" class="btn btn-success btn-lg">
                <i class="bi bi-plus-circle"></i> Nuevo Producto
            </a>
        </div>
    </div>

    @if (TempData["Mensaje"] != null)
    {
        var tipoMensaje = TempData["TipoMensaje"]?.ToString() ?? "info";
        <div class="alert alert-@tipoMensaje alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-list-ul"></i> Lista de Productos
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th style="width: 5%;">ID</th>
                                <th style="width: 25%;">Nombre</th>
                                <th style="width: 30%;">Descripción</th>
                                <th style="width: 10%;">Precio</th>
                                <th style="width: 10%;">Stock</th>
                                <th style="width: 15%;">Fecha</th>
                                <th style="width: 15%;" class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="fw-bold">#@item.Id</td>
                                    <td>@item.Nombre</td>
                                    <td>
                                        @if (string.IsNullOrEmpty(item.Descripcion))
                                        {
                                            <span class="text-muted fst-italic">Sin descripción</span>
                                        }
                                        else
                                        {
                                            @item.Descripcion
                                        }
                                    </td>
                                    <td class="fw-bold text-success">
                                        $@item.Precio.ToString("N2")
                                    </td>
                                    <td>
                                        @if (item.Stock == 0)
                                        {
                                            <span class="badge bg-danger">Agotado</span>
                                        }
                                        else if (item.Stock <= 10)
                                        {
                                            <span class="badge bg-warning text-dark">@item.Stock</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">@item.Stock</span>
                                        }
                                    </td>
                                    <td class="text-muted small">
                                        @item.FechaCreacion.ToString("dd/MM/yyyy")
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id"
                                               class="btn btn-info btn-sm" title="Ver detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="btn btn-warning btn-sm" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id"
                                               class="btn btn-danger btn-sm" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center p-5">
                    <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                    <p class="text-muted mt-3">No hay productos registrados</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Crear Primer Producto
                    </a>
                </div>
            }
        </div>
        @if (Model.Any())
        {
            <div class="card-footer text-muted">
                <i class="bi bi-info-circle"></i> Total de productos: <strong>@Model.Count()</strong>
            </div>
        }
    </div>

    <div class="mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver al Inicio
        </a>
    </div>
</div>