@model Login.Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-eye-fill"></i> Detalles del Producto
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-4 text-center mb-4">
                            <div class="p-4 bg-light rounded">
                                <i class="bi bi-box-seam" style="font-size: 6rem; color: #0dcaf0;"></i>
                                <h5 class="mt-3 text-muted">ID: #@Model.Id</h5>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4 mb-3">
                                    <i class="bi bi-tag"></i> Nombre:
                                </dt>
                                <dd class="col-sm-8 mb-3">
                                    <strong>@Model.Nombre</strong>
                                </dd>

                                <dt class="col-sm-4 mb-3">
                                    <i class="bi bi-text-left"></i> Descripción:
                                </dt>
                                <dd class="col-sm-8 mb-3">
                                    @if (string.IsNullOrEmpty(Model.Descripcion))
                                    {
                                        <span class="text-muted fst-italic">Sin descripción</span>
                                    }
                                    else
                                    {
                                        @Model.Descripcion
                                    }
                                </dd>

                                <dt class="col-sm-4 mb-3">
                                    <i class="bi bi-currency-dollar"></i> Precio:
                                </dt>
                                <dd class="col-sm-8 mb-3">
                                    <span class="badge bg-success fs-5">$@Model.Precio.ToString("N2")</span>
                                </dd>

                                <dt class="col-sm-4 mb-3">
                                    <i class="bi bi-boxes"></i> Stock:
                                </dt>
                                <dd class="col-sm-8 mb-3">
                                    @if (Model.Stock == 0)
                                    {
                                        <span class="badge bg-danger fs-6">Agotado</span>
                                    }
                                    else if (Model.Stock <= 10)
                                    {
                                        <span class="badge bg-warning text-dark fs-6">@Model.Stock unidades</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success fs-6">@Model.Stock unidades</span>
                                    }
                                </dd>

                                <dt class="col-sm-4 mb-3">
                                    <i class="bi bi-calendar3"></i> Fecha de Creación:
                                </dt>
                                <dd class="col-sm-8 mb-3">
                                    @Model.FechaCreacion.ToString("dddd, dd MMMM yyyy")
                                    <br>
                                    <small class="text-muted">@Model.FechaCreacion.ToString("HH:mm:ss")</small>
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="bi bi-arrow-left"></i> Volver al Listado
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg me-2">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>