@model Login.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill"></i> Confirmar Eliminación
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-circle-fill"></i>
                        <strong>¿Está seguro de que desea eliminar este producto?</strong>
                        <p class="mb-0 mt-2">Esta acción no se puede deshacer.</p>
                    </div>

                    <dl class="row mt-4">
                        <dt class="col-sm-4">ID:</dt>
                        <dd class="col-sm-8"><strong>#@Model.Id</strong></dd>

                        <dt class="col-sm-4">Nombre:</dt>
                        <dd class="col-sm-8">@Model.Nombre</dd>

                        <dt class="col-sm-4">Descripción:</dt>
                        <dd class="col-sm-8">
                            @if (string.IsNullOrEmpty(Model.Descripcion))
                            {
                                <span class="text-muted fst-italic">Sin descripción</span>
                            }
                            else
                            {
                                @Model.Descripcion
                            }
                        </dd>

                        <dt class="col-sm-4">Precio:</dt>
                        <dd class="col-sm-8 text-success fw-bold">$@Model.Precio.ToString("N2")</dd>

                        <dt class="col-sm-4">Stock:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary">@Model.Stock unidades</span>
                        </dd>

                        <dt class="col-sm-4">Creado:</dt>
                        <dd class="col-sm-8">@Model.FechaCreacion.ToString("dd/MM/yyyy")</dd>
                    </dl>

                    <hr>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary btn-lg me-md-2">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash"></i> Sí, Eliminar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
